{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "jsx": "react",
    "resolveJsonModule": true,
    "paths": {
      "#engine": [
        "src/index.mjs"
      ],
      "#engine/common": [
        "src/common/index.mjs"
      ],
      "#engine/components": [
        "src/components/index.mjs"
      ],
      "#engine/components/*": [
        "src/components/*/index.mjs"
      ],
      "#engine/components/gears/forward": [
        "src/components/gears/forward/index.cjs"
      ],
      "#engine/components/gears/reverse": [
        "src/components/gears/reverse/index.cjs"
      ],
      "#engine/engine": [
        "src/engine/index.jsx"
      ],
      "#engine/engine/*": [
        "src/engine/*/index.jsx"
      ],
      "#engine/transformers": [
        "src/transformers/index.mjs"
      ],
      "#engine/transformers/*": [
        "src/transformers/*/index.mjs"
      ],
      "#stories/components/*": [
        "stories/components/*/index.stories.jsx"
      ],
      "#stories/definitions/*": [
        "stories/definitions/*.json"
      ],
      "#stories/engine/*": [
        "stories/engine/*/index.stories.jsx"
      ],
      "#stories/errors": [
        "stories/errors.mjs"
      ],
      "#stories/state": [
        "stories/state/index.jsx"
      ],
      "#stories/state/*": [
        "stories/state/*/index.jsx"
      ]
    }
  },
  "include": [
    ".",
    "node_modules/shinkansen-cogs/src/**/*",
    "node_modules/shinkansen-gears/src/**/*",
    "node_modules/shinkansen-pantograph/src/**/*",
    "node_modules/shinkansen-pinion/src/**/*",
    "node_modules/shinkansen-rails/src/**/*",
    "node_modules/shinkansen-signals/src/**/*",
    "node_modules/shinkansen-sprockets/src/**/*",
    "node_modules/shinkansen-transmission/src/**/*",
    "src/**/*",
    "stories/**/*"
  ],
  "exclude": [
    "**/__tests__/**/*"
  ]
}
