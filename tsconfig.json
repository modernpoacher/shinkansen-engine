{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "#engine": [
        "./src/index.cjs",
        "./src/index.mjs"
      ],
      "#engine/common": [
        "./src/common/index.mjs"
      ],
      "#engine/components": [
        "./src/components/index.cjs",
        "./src/components/index.mjs"
      ],
      "#engine/components/*": [
        "./src/components/*/index.cjs",
        "./src/components/*/index.mjs"
      ],
      "#engine/components/gears/forward": [
        "./src/components/gears/forward/index.cjs"
      ],
      "#engine/components/gears/reverse": [
        "./src/components/gears/reverse/index.cjs"
      ],
      "#engine/engine": [
        "./src/engine/index.cjs"
      ],
      "#engine/transformers": [
        "./src/transformers/index.mjs"
      ],
      "#engine/transformers/*": [
        "./src/transformers/*/index.mjs"
      ]
    }
  },
  "include": [
    ".",
    "node_modules/shinkansen-cogs/**/*",
    "node_modules/shinkansen-gears/**/*",
    "node_modules/shinkansen-pantograph/**/*",
    "node_modules/shinkansen-pinion/**/*",
    "node_modules/shinkansen-rails/**/*",
    "node_modules/shinkansen-signals/**/*",
    "node_modules/shinkansen-sprockets/**/*",
    "node_modules/shinkansen-transmission/**/*"
  ],
  "exclude": [
    "**/__tests__/**/*"
  ]
}
